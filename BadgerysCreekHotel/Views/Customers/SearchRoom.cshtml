@model BadgerysCreekHotel.Models.ViewModels.SearchRoom
@{
    ViewData["Title"] = "Search Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search Room</h1>
<div class="row">
    <div class="col col-md-6">
        <form asp-action="SearchRoom">
            <div class="form-group">
                <label asp-for="BedCount" class="control-label">Number of Bed</label>
                <select asp-for="BedCount" class="form-control">
                    <option value="">Please select...</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label"></label>
                <input asp-for="CheckIn" class="form-control" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label"></label>
                <input asp-for="CheckOut" class="form-control" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

@if (Model != null)
{
    <div>
        <hr />
        @if (ViewBag.searchRoom.Count == 0)
        {
            <h4>No result</h4>
        }
        else
        {
            <table class="table">
                <!-- .table is a Bootstrap class giving table styles -->
                <tr>
                    <th>
                        Room ID
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        Number of Bed
                    </th>
                    <th>
                        Price
                    </th>
                </tr>

                @foreach (var item in ViewBag.SearchRoom)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Level
                        </td>
                        <td>
                            @item.BedCount
                        </td>
                        <td>
                            $@item.Price
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
}